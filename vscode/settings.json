{
    "telemetry.enableTelemetry": false,
    "keyboard.dispatch": "keyCode",

    "reason.path.ocamlmerlin": "/home/pear/.opam/default/bin/ocamlmerlin",

    "git.confirmSync": false,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "Source Code Variable",
    
    "editor.lineNumbers": "on",
    "editor.cursorStyle": "line",
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "editor.renderWhitespace": "all",
    "editor.rulers" : [120],

    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false,

    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.visualblock": "block-outline",

    "C_Cpp.clang_format_path": "/usr/local/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "none",

    "html.autoClosingTags": false,

    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#b7dcdd"
    },

    "[shellscript]": {
        "editor.lineNumbers": "relative"
    },

    "[c]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.lineNumbers": "relative",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    "[cpp]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.lineNumbers": "relative"
    },

    "[python]": {
        "editor.lineNumbers": "relative"
    },

    "[haskell]": {
        "editor.lineNumbers": "relative"
    },

    "[ocaml]": {
        "editor.lineNumbers": "relative"
    },

    "editor.fontSize": 15,
    "latex-workshop.view.pdf.viewer": "tab",
    "cmake.configureOnOpen": true,

    "bookmarks.saveBookmarksInProject": false,
    "bookmarks.navigateThroughAllFiles": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.colorTheme": "Solarized Light",
    "editor.insertSpaces": true,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "vim.neovimUseConfigFile": true,
    "vim.neovimConfigPath": "/usr/local/conf/vscode/vimrc"
}

