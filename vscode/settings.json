{
    "telemetry.enableTelemetry": false,
    "keyboard.dispatch": "keyCode",

    "latex-workshop.latex.autoBuild.run": "never",

    "reason.path.ocamlmerlin": "/home/pear/.opam/default/bin/ocamlmerlin",

    "git.confirmSync": false,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "Source Code Variable",
    
    "editor.lineNumbers": "on",
    "editor.cursorStyle": "line",
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "editor.renderWhitespace": "all",
    "editor.rulers" : [120],

    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": false,
    "zenMode.hideActivityBar": false,

    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.visualblock": "block-outline",

    "C_Cpp.clang_format_path": "/usr/local/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "none",

    "html.autoClosingTags": false,

    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#b7dcdd"
    },

    "[shellscript]": {
        "editor.lineNumbers": "relative"
    },

    "[c]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.lineNumbers": "relative",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    "[cpp]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.lineNumbers": "relative"
    },

    "[python]": {
        "editor.lineNumbers": "relative"
    },

    "[haskell]": {
        "editor.lineNumbers": "relative"
    },

    "[ocaml]": {
        "editor.lineNumbers": "relative"
    },

    "editor.fontSize": 15,
    "latex-workshop.view.pdf.viewer": "tab",
    "cmake.configureOnOpen": true,

    "bookmarks.saveBookmarksInProject": false,
    "bookmarks.navigateThroughAllFiles": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.colorTheme": "Solarized Light",
    "editor.insertSpaces": true,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",

    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "git.mergeEditor": false,

    "vim.neovimUseConfigFile": true,
    "vim.neovimConfigPath": "/usr/local/conf/vscode/vimrc",

    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.sneak": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<esc>"]
        },
    ],
    "vim.normalModeKeyBindings" :[
        {
            "before" : ["<leader>", "j"],
            "after" : ["<c-d>"],
        },
        {
            "before" : ["<leader>", "k"],
            "after" : ["<c-u>"],
        },
        {
            "before" : ["<leader>", "g"],
            "after" : ["<c-o>"],
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [

        {
            "before" : ["<leader>", "h"],
            "commands" : ["workbench.action.navigateLeft"],
        },
        {
            "before" : ["<leader>", "l"],
            "commands" : ["workbench.action.navigateRight"],
        },
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
        {
            "before" : ["<leader>", "t"],
            "commands": [ "workbench.action.terminal.focus" ]
        },
        {
            "before" : ["<leader>", "f"],
            "commands": [ "workbench.action.findInFiles"]
        },
        {
            "before" : ["<leader>", "r"],
            "commands": [ "workbench.action.replaceInFiles" ]
        },
        {
            "before" : ["<leader>", "n"],
            "commands": [ "search.action.focusNextSearchResult" ],
        },
        {
            "before" : ["<leader>", "N"],
            "commands": [ "search.action.focusPreviousSearchResult" ]
        },
        {
            "before" : ["<leader>", "p"],
            "commands": [ "workbench.action.quickOpen" ]
        },
        {
            "before" : ["<leader>", "o"],
            "commands": [ "workbench.action.showCommands" ]
        },
        {
            "before": ["<leader>", "["],
            "commands": [ "workbench.action.showAllSymbols" ],
        },
        {
            "before" : ["<leader>", "x", "x"],
            "commands" : [ "workbench.action.closeActiveEditor" ]
        },
        {
            "before": ["<leader>", "s"],
            "commands": [ "workbench.action.files.save" ]
        },
        {
            "before": ["<leader>", "x", "s"],
            "commands" : ["workbench.action.toggleSidebarVisibility"],
        },
        {
            "before": ["<leader>", "x", "t"],
            "commands": ["workbench.action.togglePanel"],
        },
        {
            "before": ["<leader>", "v"],
            "commands": ["workbench.action.splitEditor"],
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["workbench.action.closeEditorsInOtherGroups"],
        },
        {
            "before": ["<leader>", "x", "b"],
            "commands": ["workbench.action.closeGroup"]
        },
        {
            "before": ["<leader>", "x", "a"],
            "commands": ["workbench.action.closeAllEditors"]
        },
        {
            "before": ["<leader>", "i"],
            "commands": ["workbench.action.increaseViewSize"]
        },
        {
            "before": ["<leader>", "d"],
            "commands": ["workbench.action.decreaseViewSize"]
        },
        // Merge Conflicts
        {
            "before": ["<leader>", "m", "b"],
            "commands": ["merge-conflict.accept.both"]
        },
        {
            "before": ["<leader>", "m", "i"],
            "commands": ["merge-conflict.accept.incoming"]
        },
        {
            "before": ["<leader>", "m", "c"],
            "commands": ["merge-conflict.accept.current"]
        },
        // Jupyter Notebooks
        {
            "before": [ "<leader>", "c", "n" ],
            "commands": [ "notebook.focusNextEditor" ],
        },
        {
            "before": [ "<leader>", "c", "N" ],
            "commands": [ "notebook.focusPreviousEditor" ],
        },
        {
            "before": [ "<leader>", "c", "o" ],
            "commands": [ "notebook.cell.insertCodeCellBelow" ],
        },
        {
            "before": [ "<leader>", "c", "O" ],
            "commands": [ "notebook.cell.insertCodeCellAbove" ],
        },
        {
            "before": [ "<leader>", "c", "c" ],
            "commands": [ "notebook.cell.execute" ],
        },
        {
            "before": [ "<leader>", "c", "x" ],
            "commands": [ "notebook.cell.delete" ],
        }
    ],

    "gitlab.ignoreCertificateErrors": true,
    "http.proxySupport": "off",
    "http.proxyStrictSSL": false,

    "explorer.confirmDelete": true,

    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=120"
    ],
    "editor.guides.indentation": false,

    "command-runner.terminal.name": "runCommand",
    "command-runner.terminal.autoClear": true,
    "command-runner.terminal.autoFocus": true,
    "command-runner.commands": {
        "install_deps": "${homedir}/git/ml/ml_dpi/scripts/install.sh --no-deps",
        "pylint": "source ${homedir}/git/ml/ml_dpi/scripts/vars.sh; ${homedir}/git/ml/ml_dpi/scripts/run_pylint.sh",
        "black_check": "source ${homedir}/git/ml/ml_dpi/scripts/vars.sh; ${homedir}/git/ml/ml_dpi/scripts/run_black.sh check",
        "black": "source ${homedir}/git/ml/ml_dpi/scripts/vars.sh; ${homedir}/git/ml/ml_dpi/scripts/run_black.sh",
        "pytest": "source ${homedir}/git/ml/ml_dpi/scripts/vars.sh; ${homedir}/git/ml/ml_dpi/scripts/run_pytest.sh",
        "show_coverage": "source ${homedir}/git/ml/ml_dpi/scripts/vars.sh; ${homedir}/git/ml/ml_dpi/scripts/show_coverage.sh"
    },

    "cSpell.ignoreWords": [
        "atype", "fhandle", "recp", "nunique", "isin", "astype", "iterrows", "argmax", "hyperopt", "mlflow",
        "dropna", "arange", "kfold", "xticks", "yticks", "disp", "sklearn", "dataframe", "overclassified",
        "treebased", "iloc", "multicore", "sqlalchemy", "plotly", "dropdowns", "ndarray", "xaxis", "yaxis",
        "worktree", "cmake", "tracedb", "idxs", "showlegend", "ranksum","staticproperty", "classproperty"
    ]
}
