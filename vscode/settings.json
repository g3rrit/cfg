{
    "telemetry.telemetryLevel": "off",
    "keyboard.dispatch": "keyCode",
    "git.defaultBranchName": "master",

    "jupyter.notebookFileRoot": "${workspaceFolder}",

    "latex-workshop.latex.autoBuild.run": "never",

    "git.confirmSync": false,
    "editor.minimap.enabled": false,

    "editor.lineNumbers": "relative",
    "editor.cursorStyle": "line",
    "editor.tabSize": 2,
    "editor.detectIndentation": true,
    "editor.renderWhitespace": "trailing",
    //"editor.renderWhitespace": "all",
    "editor.rulers" : [120],
    "editor.autoClosingBrackets": "never",
    "editor.suggest.insertMode": "insert",
    "editor.tabCompletion": "on",

    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": false,
    "zenMode.hideActivityBar": false,

    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.visualblock": "block-outline",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "none",

    "html.autoClosingTags": false,

    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#b7dcdd"
    },

    "[shellscript]": {
        "editor.lineNumbers": "relative"
    },

    "[c]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.lineNumbers": "relative",
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.suggest.insertMode": "insert",
    },

    "[cpp]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.lineNumbers": "relative",
        "editor.suggest.insertMode": "insert",
    },

    "[python]": {
        "editor.lineNumbers": "relative",
        "editor.tabSize": 4
    },

    "[haskell]": {
        "editor.lineNumbers": "relative"
    },

    "[ocaml]": {
        "editor.lineNumbers": "relative"
    },

    "[java]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "diffEditor.ignoreTrimWhitespace": false
    },

    "files.associations": {
        "*.scr": "sql",
        "*.prc": "sql",
    },

    "editor.fontSize": 12,
    //"editor.fontSize": 20,
    "latex-workshop.view.pdf.viewer": "tab",
    "cmake.configureOnOpen": true,

    "bookmarks.saveBookmarksInProject": false,
    "bookmarks.navigateThroughAllFiles": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.colorTheme": "Solarized Light",
    "editor.insertSpaces": true,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",

    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "git.mergeEditor": false,

    "vim.neovimUseConfigFile": true,
    "vim.neovimConfigPath": "/usr/local/conf/vscode/vimrc",

    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.sneak": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<esc>"]
        },
    ],
    "vim.normalModeKeyBindings" :[
        {
            "before" : ["<leader>", "j"],
            "after" : ["<c-d>"],
        },
        {
            "before" : ["<leader>", "k"],
            "after" : ["<c-u>"],
        },
        {
            "before" : ["<leader>", "g"],
            "after" : ["<c-o>"],
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [

        {
            "before" : ["<leader>", "h"],
            "commands" : ["workbench.action.navigateLeft"],
        },
        {
            "before" : ["<leader>", "l"],
            "commands" : ["workbench.action.navigateRight"],
        },
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
        {
            "before" : ["<leader>", "t"],
            "commands": [ "workbench.action.terminal.focus" ]
        },
        {
            "before" : ["<leader>", "f"],
            "commands": [ "workbench.action.findInFiles"]
        },
        {
            "before" : ["<leader>", "r"],
            "commands": [ "workbench.action.replaceInFiles" ]
        },
        {
            "before" : ["<leader>", "n"],
            "commands": [ "search.action.focusNextSearchResult" ],
        },
        {
            "before" : ["<leader>", "N"],
            "commands": [ "search.action.focusPreviousSearchResult" ]
        },
        {
            "before" : ["<leader>", "p"],
            "commands": [ "workbench.action.quickOpen" ]
        },
        {
            "before" : ["<leader>", "o"],
            "commands": [ "workbench.action.showCommands" ]
        },
        {
            "before": ["<leader>", "["],
            "commands": [ "workbench.action.showAllSymbols" ],
        },
        {
            "before" : ["<leader>", "x", "x"],
            "commands" : [ "workbench.action.closeActiveEditor" ]
        },
        {
            "before": ["<leader>", "s"],
            "commands": [ "workbench.action.files.save" ]
        },
        {
            "before": ["<leader>", "x", "s"],
            "commands" : ["workbench.action.toggleSidebarVisibility"],
        },
        {
            "before": ["<leader>", "x", "t"],
            "commands": ["workbench.action.togglePanel"],
        },
        {
            "before": ["<leader>", "v"],
            "commands": ["workbench.action.splitEditor"],
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["workbench.action.closeEditorsInOtherGroups"],
        },
        {
            "before": ["<leader>", "x", "b"],
            "commands": ["workbench.action.closeGroup"]
        },
        {
            "before": ["<leader>", "x", "a"],
            "commands": ["workbench.action.closeAllEditors"]
        },
        {
            "before": ["<leader>", "i"],
            "commands": ["workbench.action.increaseViewSize"]
        },
        {
            "before": ["<leader>", "d"],
            "commands": ["workbench.action.decreaseViewSize"]
        },
        // Merge Conflicts
        {
            "before": ["<leader>", "m", "b"],
            "commands": ["merge-conflict.accept.both"]
        },
        {
            "before": ["<leader>", "m", "i"],
            "commands": ["merge-conflict.accept.incoming"]
        },
        {
            "before": ["<leader>", "m", "c"],
            "commands": ["merge-conflict.accept.current"]
        },
        // Jupyter Notebooks
        {
            "before": [ "<leader>", "c", "n" ],
            "commands": [ "notebook.focusNextEditor" ],
        },
        {
            "before": [ "<leader>", "c", "N" ],
            "commands": [ "notebook.focusPreviousEditor" ],
        },
        {
            "before": [ "<leader>", "c", "o" ],
            "commands": [ "notebook.cell.insertCodeCellBelow" ],
        },
        {
            "before": [ "<leader>", "c", "O" ],
            "commands": [ "notebook.cell.insertCodeCellAbove" ],
        },
        {
            "before": [ "<leader>", "c", "c" ],
            "commands": [ "notebook.cell.execute" ],
        },
        {
            "before": [ "<leader>", "c", "x" ],
            "commands": [ "notebook.cell.delete" ],
        }
    ],

    "gitlab.ignoreCertificateErrors": true,

    "explorer.confirmDelete": true,

    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=120"
    ],
    "editor.guides.indentation": false,

    "command-runner.terminal.name": "runCommand",
    "command-runner.terminal.autoClear": true,
    "command-runner.terminal.autoFocus": true,
    "command-runner.commands": {
        "date": "date",
    },

    //"vscode-neovim.useWSL": true,
    //"vscode-neovim.neovimExecutablePaths.win32": "nvim.exe",
    // "vscode-neovim.neovimInitVimPaths.win32": "C:\\Users\\prossger\\git\\cfg\\vscode\\nvim\\init.lua",
    //"vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "/usr/local/cfg/nvim/lua/init_vscode.lua",

    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "jupyter.askForKernelRestart": false,
    "git.openRepositoryInParentFolders": "never",
    "editor.inlineSuggest.enabled": true,

    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "vscode-neovim.logOutputToConsole": true,
    "githubPullRequests.pullBranch": "never",

    "metals.serverProperties": [
        "-Xmx1G",
        "-Dmetals.loglevel=debug"
    ],

    "cSpell.userWords": [
        "aologfile",
        "arange",
        "argmax",
        "astype",
        "atype",
        "bytree",
        "classproperty",
        "cmake",
        "dataframe",
        "disp",
        "dropdowns",
        "dropna",
        "dtypes",
        "easymotion",
        "fbeta",
        "fhandle",
        "hlsearch",
        "hyperopt",
        "hyperparam",
        "idxs",
        "iloc",
        "incsearch",
        "ipynb",
        "isin",
        "iterrows",
        "kfold",
        "micos",
        "mlflow",
        "multicore",
        "ndarray",
        "neovim",
        "nunique",
        "nvim",
        "ocamlmerlin",
        "opam",
        "overclassified",
        "plotly",
        "predef",
        "ranksum",
        "recp",
        "showlegend",
        "sklearn",
        "sqlalchemy",
        "staticproperty",
        "stratisfy",
        "tracedb",
        "treebased",
        "visualblock",
        "worktree",
        "xaxis",
        "xgboost",
        "xticks",
        "yaxis",
        "yticks"
    ],
    "cSpell.language": "en,nb",
    "cSpell.allowCompoundWords": true,
    "notebook.output.scrolling": true
}