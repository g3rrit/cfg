{
    "telemetry.enableTelemetry": false,
    "keyboard.dispatch": "keyCode",

    "latex-workshop.latex.autoBuild.run": "never",

    "reason.path.ocamlmerlin": "/home/pear/.opam/default/bin/ocamlmerlin",

    "git.confirmSync": false,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "Source Code Variable",
    
    "editor.lineNumbers": "on",
    "editor.cursorStyle": "line",
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "editor.renderWhitespace": "all",
    "editor.renderIndentGuides": false,
    "editor.rulers" : [120],

    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": false,
    "zenMode.hideActivityBar": false,

    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.visualblock": "block-outline",

    "C_Cpp.clang_format_path": "/usr/local/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "none",

    "html.autoClosingTags": false,

    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#b7dcdd"
    },

    "[shellscript]": {
        "editor.lineNumbers": "relative"
    },

    "[c]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.lineNumbers": "relative",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    "[cpp]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.lineNumbers": "relative"
    },

    "[python]": {
        "editor.lineNumbers": "relative"
    },

    "[haskell]": {
        "editor.lineNumbers": "relative"
    },

    "[ocaml]": {
        "editor.lineNumbers": "relative"
    },

    "editor.fontSize": 15,
    "latex-workshop.view.pdf.viewer": "tab",
    "cmake.configureOnOpen": true,

    "bookmarks.saveBookmarksInProject": false,
    "bookmarks.navigateThroughAllFiles": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.colorTheme": "Solarized Light",
    "editor.insertSpaces": true,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "vim.neovimUseConfigFile": true,
    "vim.neovimConfigPath": "/usr/local/conf/vscode/vimrc",

    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        },

    ],
    "vim.normalModeKeyBindings" :[
        {
            "before" : ["<leader>", "j"],
            "after" : ["<c-d>", "<leader>"],
        },
        {
            "before" : ["<leader>", "k"],
            "after" : ["<c-u>", "<leader>"],
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [

        {
            "before" : ["<leader>", "h"],
            "commands" : ["workbench.action.navigateLeft"],
        },
        {
            "before" : ["<leader>", "l"],
            "commands" : ["workbench.action.navigateRight"],
        },
        {
            "before" : ["<leader>", "k"],
            "commands" : ["workbench.action.navigateUp"],
        },
        {
            "before" : ["<leader>", "j"],
            "commands" : ["workbench.action.navigateDown"],
        },

        {
            "before": ["<leader>", "d"],
            "after": ["d", "d"]
        },
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
        {
            "before" : ["<leader>", "t"],
            "commands": [ "workbench.action.terminal.focus" ]
        },
        {
            "before" : ["<leader>", "f"],
            "commands": [ "workbench.action.findInFiles"]
        },
        {
            "before" : ["<leader>", "r"],
            "commands": [ "workbench.action.replaceInFiles" ]
        },
        {
            "before" : ["<leader>", "n"],
            "commands": [ "search.action.focusNextSearchResult" ]
        },
        {
            "before" : ["<leader>", "N"],
            "commands": [ "search.action.focusPreviousSearchResult" ]
        },
        {
            "before" : ["<leader>", "p"],
            "commands": [ "workbench.action.quickOpen" ]
        },
        {
            "before" : ["<leader>", "o"],
            "commands": [ "workbench.action.showCommands" ]
        },
        {
            "before" : ["<leader>", "x"],
            "commands" : [ "workbench.action.closeActiveEditor" ]
        },
        {
            "before" : ["<leader>", "w"],
            "commands" : [ "editor.action.showHover" ]
        },
        {
            "before": ["<leader>", "s"],
            "commands": [ "workbench.action.files.save" ]
        },

        {
            "before": ["<leader>", "x", "s"],
            "commands" : ["workbench.action.toggleSidebarVisibility"],
        },
        {
            "before": ["<leader>", "x", "t"],
            "commands": ["workbench.action.togglePanel"],
        },

    ],

    "gitlab.ignoreCertificateErrors": true,
    "http.proxySupport": "off",
    "http.proxyStrictSSL": false,
    "explorer.confirmDelete": false,
}
